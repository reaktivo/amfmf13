@import "vendor/normalize.css"
@import "vendor/boilerplate.css"


light-blue = #50ac97

body
  background url(../img/background.jpg)
  background-size cover
  color #fff

h1.amf-logo
  width 363px
  height 275px
  -webkit-transition all 0.4s ease-in-out
  transition all 0.4s ease-in-out
  position relative
  margin 80px auto
  &.small
    width 300px
    height 227px

  > *
    height 100%
    width 0
    padding-left 100%
    overflow hidden
    position absolute
    top 0
    left 0
    opacity 0
    -webkit-transform scale(2)
    -moz-transform scale(2)
    transform scale(2)
    background-size cover
  .all
    background-image url(../img/all.png)
  .my
    background-image url(../img/my.png)
  .friends
    background-image url(../img/friends.png)
  .music-festival
    background-image url(../img/music-festival.png)

@media only screen and (max-width: 320px)
  h1.amf-logo
    width 300px
    height 227px

#content
  opacity 0
  margin 0 auto 20px

  .news
    width 300px
    padding 10px
    margin 0 auto
    ul
      padding 0
      list-style-type none
      .date
        color light-blue
        text-transform uppercase
        font-size 10px
        font-weight bold
        display block
        margin 10px 0 0
      .text
        display block

  .date
    margin 20px auto 40px
    width 320px
    height 0
    padding-top 30px
    overflow hidden
    background url(../img/date.png)

  .tickets
    margin-bottom 80px
    text-align center
    a
      padding 5px
      background #fff
      color #10163a
      font-size 24px
      font-weight bold
      text-decoration none
      text-transform uppercase
      letter-spacing 2px
